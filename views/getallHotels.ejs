<!DOCTYPE html>
<html>
<head>
	<title>Hotel Information</title>
	<style>
		table {
			border-collapse: collapse;
			width: 100%;
			font-family: Arial, sans-serif;
			font-size: 14px;
		}

		th, td {
			text-align: left;
			padding: 8px;
			border-bottom: 1px solid #ddd;
		}

		tr:hover {background-color: #f5f5f5;}

		th {
			background-color: #4CAF50;
			color: white;
		}

		td:last-child {
			text-align: center;
		}

		.delete-button {
			background-color: #f44336;
			color: white;
			padding: 5px 10px;
			border: none;
			border-radius: 3px;
			cursor: pointer;
		}

		.delete-button:hover {
			background-color: #d32f2f;
		}

		.edit-button {
			background-color: #2196F3;
			color: white;
			padding: 5px 10px;
			border: none;
			border-radius: 3px;
			cursor: pointer;
		}

		.edit-button:hover {
			background-color: #0F8CEC;
		}
	</style>
</head>
<body>
	<h1>Hotel Information</h1>
	<table>
		<thead>
			<tr>
				<th>Hotel Name</th>
				<th>Type</th>
				 <th>City</th>
				<th>Title</th>
				<th>Rating</th>
				<th>Rooms</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
        <tbody>
			<!-- Server-side code to retrieve hotel information from MongoDB -->
			<% hotels.forEach(function(hotel) { %>
				<tr>
					<td><%= hotel.name %></td>
					<td><%= hotel.type %></td>
					<td><%= hotel.city %></td>
					<td><%= hotel.title %></td>
					<td><%= hotel.rating %></td>
					<td><%= hotel.rooms %></td>
					<td>
						<form method="POST" action="/edit-hotel">
							<input type="hidden" name="_id" value="<%= hotel._id %>">
							<button type="submit" class="edit-button">Edit</button>
						</form>
					</td>
					<td>
						<form method="POST" action="/delete-hotel">
							<input type="hidden" name="_id" value="<%= hotel._id %>">
							<button type="submit" class="delete-button">Delete</button>
						</form>
					</td>
				</tr>
			<% }); %>
		</tbody>
	</table>
</body>
</html>
